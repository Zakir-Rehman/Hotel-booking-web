<%- layout("/layouts/boilerplate") -%>
    <div class="index-main-div max-sm:mt-[80px]">
        <h3 class="whishlist-div">
            Wishlists -
            <span class="likedCount">
                <%= likedCount %>
            </span>
        </h3>
        <% if (likedCount===0) { %>
            <div class="text-center mt-10 mb-5">
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-heart mx-auto mb-6 text-gray-400">
                    <path
                        d="M2 9.5a5.5 5.5 0 0 1 9.591-3.676.56.56 0 0 0 .818 0A5.49 5.49 0 0 1 22 9.5c0 2.29-1.5 4-3 5.5l-5.492 5.313a2 2 0 0 1-3 .019L5 15c-1.5-1.5-3-3.2-3-5.5">
                    </path>
                </svg>
                <h2 class="text-lg font-semibold">Your Wishlist is Empty</h2>
                <p class="text-gray-500 mb-4">
                    Save your favorite items here to keep track of them and purchase later!
                </p>
                <a href="/listings" class="btn btn-danger bg-[#FF385C] text-white">Start Listing</a>
            </div>
            <% } %>

                <div  class="cards-main-div flex flex-wrap max-sm:w-[100%] justify-start gap-5 max-lg:justify-center max-lg:mt-[20px]">
                    <% for(let list of listings) { %>
                        <a href="/listings/<%= list._id %>" class="a-link relative">
                            <div class="card max-sm:w-[100%] a-div">
                                <img src="<%=list.image.url %>" class="rounded-[31px] max-sm:w-[100%] images-db"
                                    alt="Listing image" style="height: 14rem;" />
                                <div class="card-img-overlay absolute flex justify-end top-[25px]  w-[100%] h-[15px] ">
                                    <span class=" rounded-[50%]  ">
                                        <a href="/listings/disliked/<%= list._id %>">
                                            <!-- <i
                                    class="ri-delete-bin-2-fill shadow-[0_0_2px_5px_white]  text-[1.2rem] bg-[white] rounded-[50%]  hover:scale-120 transition duration-200 ease-in   transition-transform font-semibold text-[black]"></i> -->
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                                stroke-linecap="round" stroke-linejoin="round"
                                                class="shadow-[0_0_2px_5px_white]  text-[1.2rem] bg-[white] rounded-[50%]  hover:scale-120 transition duration-200 ease-in   transition-transform font-semibold"
                                                aria-hidden="true">
                                                <path d="M10 11v6"></path>
                                                <path d="M14 11v6"></path>
                                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6"></path>
                                                <path d="M3 6h18"></path>
                                                <path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                            </svg>
                                        </a>

                                    </span>
                                </div>
                                <div class="card-body max-sm:border px-[3px] py-[3px] border-[#ccc] rounded-[20px] ">
                                    <div class="card-text gst-div">
                                        <p class="">
                                            <i class="fa-solid fa-hand-holding-dollar"></i> from &#8360; <%=
                                                list.price.toLocaleString("en-PK") %> / 2 night
                                        </p>
                                        <a href="/listings/<%= list._id %>">
                                            <p><i class="fa-solid fa-pencil"></i>
                                                <%= list.title %>
                                            </p>
                                        </a>
                                        <p class="text-info"><i class="fa-solid fa-plus"></i> 18% GST</p>
                                        <% if (list.orderType || list.bedrooms ) { %>
                                            <p>
                                                <i class="fa-solid fa-house"></i>
                                                <span>
                                                    <%= list.orderType %>
                                                </span>
                                                <i class="fa-solid fa-bed"></i>
                                                <span>
                                                    Bedrooms <%= list.bedrooms %>
                                                </span>
                                                <i class="fa-solid fa-user-group"></i>
                                                <span>
                                                    Guests <%= list.guests %>
                                                </span>
                                            </p>
                                            <% } %>
                                                <p>
                                                    <span> <i class="fa-solid fa-location-dot"></i>
                                                        <%= list.country %>
                                                    </span>,<span>
                                                        <%= list.location %>
                                                    </span>
                                                </p>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <% } %>
                </div>
    </div>